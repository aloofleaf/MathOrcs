<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_gravity="center_horizontal"
    >

    <TextView
        android:layout_height="match_parent"
        android:layout_width="30dp"
        android:id="@+id/high_score_place_text_view"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:id="@+id/high_score_name_text_view"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:id="@+id/high_score_score_text_view"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/high_score_difficulty_text_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/high_score_level_text_view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_margin="5dp"
        />
</LinearLayout>